<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.funhotel.marqueetext.MainActivity">

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:textSize="28sp"
        android:text="sajdkasjkdhkajshdjkhasjkhdjshajkdhak"
        android:gravity="center|center_vertical"
        />


    <com.funhotel.tvllibrary.view.AutoScrollTextView
        android:id="@+id/tv_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@android:color/black"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:visibility="visible" />



    <com.dalong.marqueeview.MarqueeView
        android:id="@+id/mMarqueeView"
        android:background="@color/c30000000"
        app:textcolor="@color/colorAccent"
        app:textSize="30sp"
        app:startPoint="end"
        app:isRepeat="true"
        app:direction="left"
        app:speed="1"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
