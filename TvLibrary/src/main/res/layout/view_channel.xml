<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <com.funhotel.tvllibrary.view.PlayerMenuListView
        android:id="@+id/lv_04"
        android:background="@color/c80000000"
        android:listSelector="@color/transparent"
        android:scrollbars="none"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:nextFocusRight="@+id/lv_01"
        android:layout_width="@dimen/px300"
        android:layout_height="wrap_content">
    </com.funhotel.tvllibrary.view.PlayerMenuListView>

    <com.funhotel.tvllibrary.view.PlayerMenuListView
        android:background="@color/c60000000"
        android:scrollbars="none"
        android:id="@+id/lv_01"
        android:nextFocusRight="@+id/lv_02"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:layout_width="@dimen/px400"
        android:layout_height="wrap_content" >
    </com.funhotel.tvllibrary.view.PlayerMenuListView>

    <com.funhotel.tvllibrary.view.PlayerMenuListView
        android:background="@color/c60000000"
        android:scrollbars="none"
        android:listSelector="@mipmap/home_selected"
        android:visibility="gone"
        android:id="@+id/lv_02"
        android:nextFocusRight="@+id/lv_03"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:layout_width="@dimen/px300"
        android:layout_height="wrap_content" >
    </com.funhotel.tvllibrary.view.PlayerMenuListView>

    <com.funhotel.tvllibrary.view.PlayerMenuListView
        android:background="@color/c50000000"
        android:paddingTop="@dimen/px10"
        android:scrollbars="none"
        android:listSelector="@mipmap/home_selected"
        android:visibility="gone"
        android:id="@+id/lv_03"
        android:nextFocusLeft="@+id/lv_02"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:layout_width="@dimen/px600"
        android:layout_height="wrap_content" >
    </com.funhotel.tvllibrary.view.PlayerMenuListView>

</LinearLayout>